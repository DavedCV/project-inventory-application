extends layout 

block section
  h2 Categories
  ul 
    li 
      a(href="/catalog/category") All Categories
    li
      a(href="/catalog/category/create") Create New Category

block content
  div(class="categories")
    h2= title 
    if categories.length 
      ul 
        each category in categories 
          li 
            div(class="category-card")
              h3 
                a(href=category.url)= category.name
              p #[strong Description]: #{category.description}

              div(class="category-card-actions")
                  a(href="/catalog/category/update/" + category._id) 
                    i(class="fa-solid fa-pen-to-square")
                  a(href="/catalog/category/delete/" + category._id) 
                    i(class="fa-solid fa-trash")
