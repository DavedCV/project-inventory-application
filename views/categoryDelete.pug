extends layout 

block section
  h2 Categories
  ul 
    li 
      a(href="/catalog/category") All Categories
    li
      a(href="/catalog/category/create") Create New Category

block content 
  div(class="content")
    h2 #{title}
    div(class="delete")
      if !error
        h2 #{category.name}
        if category 
          p #[strong Are you sure you want to delete this category?]
          form(method="POST")
            button(type="submit") Delete Category
        else 
          p #[strong No Category found.]
      else 
        p #[strong There are associated items with this category.]
