extends layout 

block section
  h2 Items
  ul 
    li 
      a(href="/catalog/item") All Items
    li
      a(href="/catalog/item/create") Create New Item

block content 
  div(class="content")
    h2 #{title}
    div(class="delete")
      h2 #{item.name}
      if item 
        p #[strong Are you sure you want to delete this item?]
        form(method="POST")
          button(type="submit") Delete Item
      else 
        p #[strong No item found.]
