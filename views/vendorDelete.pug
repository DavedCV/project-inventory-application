extends layout 

block section
  h2 Vendors
  ul 
    li 
      a(href="/catalog/vendor") All Vendors
    li
      a(href="/catalog/vendor/create") Create New Vendor

block content 
  div(class="content")
    h2 #{title}
    div(class="delete")
      if !error
        h2 #{vendor.name}
        if vendor 
          p #[strong Are you sure you want to delete this vendor?]
          form(method="POST")
            button(type="submit") Delete Vendor
        else 
          p #[strong No Vendor found.]
      else 
        p #[strong There are associated items with this vendor.]
