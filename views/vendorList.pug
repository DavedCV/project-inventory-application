extends layout 

block section
  h2 Vendors
  ul 
    li 
      a(href="/catalog/vendor") All Vendors
    li
      a(href="/catalog/vendor/create") Create New Vendor

block content
  div(class="vendors")
    h2= title 
    if vendors.length 
      ul 
        each vendor in vendors 
          li 
            div(class="vendor-card")
              h3 
                a(href=vendors.url)= vendor.name
              p #[strong Description]: #{vendor.description}

              div(class="vendor-card-actions")
                a(href="/catalog/vendor/update/" + vendor._id) 
                  i(class="fa-solid fa-pen-to-square")
                a(href="/catalog/vendor/delete/" + vendor._id) 
                  i(class="fa-solid fa-trash")
