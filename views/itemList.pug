extends layout 

block section
  h2 Items
  ul 
    li 
      a(href="/catalog/item") All Items
    li
      a(href="/catalog/item/create") Create New Item
      
block content
  div(class="content")
    h2= title
    if items.length 
      div(class="items")
        ul 
          each item in items 
            li 
              div(class="item-card")
                h3 
                  a(href=item.url) #{item.name}
                p #[strong Category]: #{item.category.name}
                p #[strong Price]: #{item.price}

                div(class="item-card-actions")
                  a(href="/catalog/item/update/" + item._id) 
                    i(class="fa-solid fa-pen-to-square")
                  a(href="/catalog/item/delete/" + item._id)
                    i(class="fa-solid fa-trash")
    else 
      p No items in inventory
