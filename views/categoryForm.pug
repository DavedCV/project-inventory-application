extends layout 

block section
  h2 Categories
  ul 
    li 
      a(href="/catalog/category") All Categories
    li
      a(href="/catalog/category/create") Create New Category

block content 
  div(class="content")
    h2 #{title}
    form(method="POST")
      ul 
        li 
          label(for="name") Name:
          input(type="text" name="name", required, value=(category ? category.name : ""))
        li 
          label(for="description") Description:
          textarea(name="description", required) #{category ? category.description : ""}

      button(type="submit") Category Ready

      if erros    
        ul 
          each error in errors
            li= error.msg
